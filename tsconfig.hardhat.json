{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react",
    "noEmit": false,
    "outDir": "dist"
  },
  "include": [
    "contracts/**/*",
    "test/**/*",
    "scripts/**/*",
    "ignition/**/*",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules", "src/**/*"]
}
